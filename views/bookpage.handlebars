<h1>{{page_title}}</h1>

<div class="box">
    <br><br>
    <h2>{{content.title}}</h2>
    {{#if content}}
    {{!-- {{#each content}} --}}
    <table class="taulu">
        <tr class="tr">
            <td class="td">
                <h3>Id:</h3>
            </td>
            <td>{{content._id}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Title:</h3>
            </td>
            <td>{{content.title}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>ISBN:</h3>
            </td>
            <td>{{content.isbn}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Page Count:</h3>
            </td>
            <td>{{content.pageCount}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Publish Date:</h3>
            </td>
            {{!-- <td>{{content.publishedDate.$date}}</td> --}}
            <td>{{content.publishedDate}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Thumbnail URL:</h3>
            </td>
            <td>{{content.thumbnailUrl}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Short Description:</h3>
            </td>
            <td>{{content.shortDescription}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Long Description:</h3>
            </td>
            <td>{{content.longDescription}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Status:</h3>
            </td>
            <td>{{content.status}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Authors:</h3>
            </td>
            <td>{{content.authors}}</td>
        </tr>
        <tr class="tr">
            <td class="td">
                <h3>Categories:</h3>
            </td>
            <td>{{content.categories}}</td>
        </tr>
    </table>
    <div class="container">
        <button class="button"><a style="color:#fff; text-decoration:none" href="../update/{{content._id}}">Update</a></button>
        <button class="button"><a style="color:#fff; text-decoration:none"  href="../delete/{{content._id}}">Delete</a></button>

    </div>
    {{!-- {{/each}} --}}
    {{else}}
    <p>No Content</p>
    {{/if}}
</div>